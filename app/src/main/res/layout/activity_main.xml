<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    style="@style/Base.CardView"
    android:background="#494444">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="65dp"
            android:background="#CDCBCB"
            android:textStyle="bold"
            android:id="@+id/tv10"
            android:maxLines="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Base.CardView"
        android:orientation="vertical"
        android:layout_marginTop="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N3"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N4"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N5"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N6"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N7"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N8"
                android:layout_margin="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="35dp"
                android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N9"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/Add"
                android:layout_margin="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/N0"
                android:layout_margin="3dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/Equal"
                android:layout_margin="3dp"/>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/Cancle"
                android:layout_margin="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/dot"
                android:layout_margin="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textSize="35dp"

               android:layout_margin="3dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/mul"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/min"
                android:layout_margin="3dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="35dp"
                android:background="#2B2A2A"
                android:textColor="#DFDBDB"
                android:id="@+id/div"
                android:layout_margin="3dp"/>



        </LinearLayout>





    </LinearLayout>











</LinearLayout>